generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("PocketScholar_DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "prisma"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Topic {
  id        String   @id @default(cuid())
  title     String
  shortDesc String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  topicId   String
  userId    String
  Topic     Topic    @relation(fields: [topicId], references: [id])
  User      User     @relation(fields: [userId], references: [id])

  @@index([topicId])
  @@index([userId])
}

model User {
  id                String      @id @default(cuid())
  name              String?
  email             String?     @unique
  emailVerified     DateTime?
  username          String?     @unique
  image             String?
  UnallocatedLevels Int         @default(0)
  UnrequestedSkills Int         @default(0)
  role              Role        @default(USER)
  accounts          Account[]
  sessions          Session[]
  characters        Character[]
  request           Request[]
  posts             Post[]
}

model Skill {
  id                   String      @id @default(cuid())
  title                String
  description          String?
  descriptionShort     String?
  tier                 Int
  parentSkillId        String?
  skillGroupId         String?
  prerequisiteSkills   Json?
  permenentEpReduction Int
  epCost               String
  activation           String
  duration             String
  abilityCheck         String?
  canBeTakenMultiple   Boolean     @default(false)
  playerVisable        Boolean     @default(true)
  visibilityRoles      Role[]      @default([])
  additionalInfo       Json?
  chararacterId        String?
  classId              String?
  parentSkill          Skill?      @relation("RelatedSkills", fields: [parentSkillId], references: [id], onDelete: Restrict, onUpdate: Restrict)
  childSkills          Skill[]     @relation("RelatedSkills")
  skillGrouping        SkillGroup? @relation(fields: [skillGroupId], references: [id])
  class                Class?      @relation("ClassSkills", fields: [classId], references: [id])
  primaryCharacters    Character[] @relation("PrimarySkills")
  secondaryCharacters  Character[] @relation("SecondarySkills")

  @@index([skillGroupId])
  @@index([parentSkillId])
  @@index([classId])
  @@index([chararacterId])
}

model SkillGroup {
  id          String  @id @default(cuid())
  title       String
  description String?
  skills      Skill[]
}

model Class {
  id                  String      @id @default(cuid())
  Title               String
  description         String
  grantedSkills       Json?
  Skills              Json?
  SkillTierGains      Json?
  HP                  Json?
  EP                  Json?
  Attack              Json?
  Accuracy            Json?
  Defense             Json?
  Resistance          Json?
  Tough               Json?
  Quick               Json?
  Mind                Json?
  visibilityRoles     Role[]      @default([])
  skills              Skill[]     @relation("ClassSkills")
  primaryCharacters   Character[] @relation("PrimaryClass")
  secondaryCharacters Character[] @relation("SecondaryClass")

  @@index([Title])
}

model Character {
  id                String                @id @default(cuid())
  name              String
  userId            String?
  primaryClassId    String?
  primaryClassLvl   Int
  secondaryClassId  String?
  secondaryClassLvl Int
  Attributes        Json?
  notes             Json?
  createdAt         DateTime              @default(now())
  updatedAt         DateTime              @updatedAt
  phazians          Int
  user              User?                 @relation(fields: [userId], references: [id], onDelete: Restrict, onUpdate: Restrict)
  primaryClass      Class?                @relation("PrimaryClass", fields: [primaryClassId], references: [id], onDelete: Restrict, onUpdate: Restrict)
  secondaryClass    Class?                @relation("SecondaryClass", fields: [secondaryClassId], references: [id], onDelete: Restrict, onUpdate: Restrict)
  primarySkills     Skill[]               @relation("PrimarySkills")
  secondarySkills   Skill[]               @relation("SecondarySkills")
  inventory         Item[]
  spells            Spell[]
  events            Event[]
  adjustments       CharacterAdjustment[]

  @@index([userId])
  @@index([primaryClassId])
  @@index([secondaryClassId])
}

model Adjustment {
  id          String                @id @default(cuid())
  title       String
  description String?
  sourceType  AdjustmentSourceType
  effectsJson Json
  tags        Json?
  archived    Boolean               @default(false)
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
  characters  CharacterAdjustment[]

  @@index([title])
  @@index([sourceType])
  @@index([archived])
}

model CharacterAdjustment {
  id           String     @id @default(cuid())
  characterId  String
  adjustmentId String
  notes        String?
  appliedAt    DateTime   @default(now())
  character    Character  @relation(fields: [characterId], references: [id], onDelete: Cascade)
  adjustment   Adjustment @relation(fields: [adjustmentId], references: [id], onDelete: Cascade)

  @@unique([characterId, adjustmentId])
  @@index([characterId])
  @@index([adjustmentId])
}

model Event {
  id              String              @id @default(cuid())
  title           String
  date            DateTime
  location        String?
  address         String?
  capacity        Int?
  coordinates     Json?
  createdAt       DateTime            @default(now())
  endDate         DateTime?
  price           Float?
  registrationEnd DateTime?
  status          EventStatus         @default(DRAFT)
  stripePriceId   String?
  stripeProductId String?
  updatedAt       DateTime
  description     Json?
  data            Json?
  characters      Character[]
  registrations   EventRegistration[]
}

model Item {
  id          String     @id @default(cuid())
  title       String
  description String?
  type        ItemType?
  quantity    Int
  visibilityRoles Role[] @default([])
  characterId String?
  character   Character? @relation(fields: [characterId], references: [id], onDelete: Restrict, onUpdate: Restrict)

  @@index([characterId])
}

model Spell {
  id          String     @id @default(cuid())
  title       String
  type        String?
  description String?
  level       Int
  characterId String?
  data        Json?
  visibilityRoles Role[] @default([])
  character   Character? @relation(fields: [characterId], references: [id], onDelete: Restrict, onUpdate: Restrict)

  @@index([characterId])
}

model Request {
  id          String       @id @default(cuid())
  title       String
  description String?
  userId      String?
  type        RequestType?
  User        User?        @relation(fields: [userId], references: [id], onDelete: Restrict, onUpdate: Restrict)

  @@index([userId])
}

model CharacterToEvent {
  A String
  B String

  @@id([A, B], map: "_CharacterToEvent_AB_pkey")
  @@index([B], map: "_CharacterToEvent_B_index")
  @@map("_CharacterToEvent")
}

model Attendee {
  id             String   @id
  name           String
  email          String?
  registrationId String
  createdAt      DateTime @default(now())
  updatedAt      DateTime

  @@index([registrationId])
}

model EventFAQ {
  id        String   @id
  question  String
  answer    Json
  eventId   String
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([eventId])
}

model EventRegistration {
  id              String         @id
  eventId         String
  userId          String
  status          RegisterStatus @default(WAITLIST)
  promoCode       String?
  stripePaymentId String?        @unique
  totalAmount     Float?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime
  event           Event          @relation(fields: [eventId], references: [id])

  @@index([eventId])
  @@index([userId])
}

model PromoCode {
  id           String    @id
  code         String    @unique
  discount     Float
  isPercentage Boolean   @default(true)
  maxUses      Int?
  usedCount    Int       @default(0)
  validFrom    DateTime  @default(now())
  validUntil   DateTime?
  eventId      String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime

  @@index([code])
  @@index([eventId])
}

model PrimarySkills {
  A String
  B String

  @@id([A, B], map: "_PrimarySkills_AB_pkey")
  @@index([B], map: "_PrimarySkills_B_index")
  @@map("_PrimarySkills")
}

model SecondarySkills {
  A String
  B String

  @@id([A, B], map: "_SecondarySkills_AB_pkey")
  @@index([B], map: "_SecondarySkills_B_index")
  @@map("_SecondarySkills")
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
  SPELLWRIGHT
  MODERATOR
}

enum AdjustmentSourceType {
  RACE
  SKILL
  ITEM
  DISEASE
  CUSTOM
}

enum ItemType {
  WEAPON
  ARMOR
  CONSUMABLE
  MISC
  MAGIC_ITEM
  INCARNATE_ITEM
}

enum RequestType {
  SKILL
  SPELL
  CHARACTER
  OTHER
}

enum EventStatus {
  DRAFT
  PUBLISHED
  CANCELLED
  COMPLETED
}

enum RegisterStatus {
  REGISTERED
  WAITLIST
  CANCELLED
}
